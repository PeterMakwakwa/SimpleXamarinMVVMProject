        <Entry Placeholder="LastName" Text="{Binding Employee.person.lastName}"/>
        <Entry Placeholder="FirstName" Text="{Binding Employee.person.firstName}"/>
        <Entry Placeholder="Date Of Birth" Text="{Binding Employee.person.birthDate}"/>-->

        <Button Text="Save Data"
                Command="{Binding SendAddEmpployeeCommand}"/>
    </StackLayout>


</ContentPage>